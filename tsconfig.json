{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "prisma",
    "prisma/**/*",
    "../../node_modules",
    "**/node_modules"
  ],
  "include": ["src/**/*", "index.ts"]
}
